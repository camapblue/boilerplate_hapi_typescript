{
  "name": "boilerplate_hapi_typescript",
  "version": "1.0.0",
  "description": "boilerplate hapi typescript",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest --verbose",
    "test:cov": "npm run test -- --coverage --runInBand",
    "test:watch": "npm run test -- --watch",
    "watch-ts": "tsc -w",
    "lint": "eslint ./src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp .env dist/.env",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/src/server.js",
    "start:prof": "npm run prestart && clinic bubbleprof -- node dist/src/server.js",
    "start:flame": "npm run prestart && clinic flame -- node dist/src/server.js",
    "watch": "nodemon --watch src -e ts --exec npm run start",
    "debug": "nodemon --inspect src/server.ts",
    "preversion": "git-branch-is -r \"^(feature|fix|hotfix|release)/SKD-\\d+[0-9a-z\\-]+$\" && echo Preversion checks passed. Your branch name is correct format."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run preversion && lint-staged && npm run build",
      "pre-push": "npm run preversion && npm run test"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "PTC",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^7.3.0",
    "@hapi/boom": "^10.0.0",
    "@hapi/hapi": "^20.2.2",
    "@hapi/hoek": "^10.0.0",
    "@hapi/inert": "^7.0.0",
    "@hapi/joi-date": "^2.0.1",
    "@hapi/vision": "^7.0.0",
    "@types/hapi__hapi": "^20.0.12",
    "@types/hapi__inert": "^5.2.3",
    "@types/hapi__vision": "^5.5.3",
    "@types/qs": "^6.9.3",
    "amazon-cognito-identity-js": "^5.2.10",
    "aws-sdk": "^2.1182.0",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "handlebars": "^4.7.7",
    "hapi-cors": "1.0.3",
    "hapi-pino": "^10.1.0",
    "hapi-swagger": "^14.5.5",
    "html-to-text": "^8.2.0",
    "http-status-codes": "^2.2.0",
    "i18n-mongo": "^1.1.5",
    "joi": "^17.6.0",
    "joi-objectid": "^4.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongoose": "^6.4.4",
    "nodemailer": "^6.7.7",
    "nodemailer-mock": "^1.5.12",
    "qs": "^6.9.4",
    "rimraf": "^3.0.2",
    "uuid": "^8.3.2",
    "winston": "^3.8.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/cls-hooked": "^4.3.3",
    "@types/dotenv": "^8.2.0",
    "@types/html-to-text": "^8.1.0",
    "@types/jest": "^28.1.5",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.136",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.0.3",
    "@types/nodemailer": "^6.4.4",
    "@types/prettier": "2.6.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "expose-gc": "^1.0.0",
    "git-branch-is": "^4.0.0",
    "husky": "^4.3.8",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "mongodb-memory-server": "^8.7.2",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "sonarqube-scanner": "^0.1.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
